extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)

  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Đăng nhập
        form(
          action=`${prefixAdmin}/auth/login`
          method="POST"
        )
          div(class="form-group")
            label(for="email")  Email*
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              require
            ) 
          div(class="form-group")
            label(for="password") Mật khẩu*
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              require
            )
          div(class="form-group mt-2")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng nhập