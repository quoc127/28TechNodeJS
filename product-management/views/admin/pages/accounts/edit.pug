extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main 
  +alert-success()
  +alert-error()

  h1(class="mb-4") Chỉnh sửa sản phẩm
  if(roles)
    form(
      action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ tên*
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          required
          value=data.fullName
        )
      div(class="form-group")
        label(for="email")  Email*
        input(
          type="text"
          name="email"
          id="email"
          class="form-control form-select"
          require
          value=data.email
        ) 
      div(class="form-group")
        label(for="password") Mật khẩu*
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
          require
          value=data.password
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value=data.phone
        )
      div(
        class="form-group"
        upload-image
        style="padding-top: 10px"
      )
        label(for="avatar") Avatar
        input(
          type="file"
          class="form-control-file d-block"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=data.avatar
          upload-image-preview
          class="image-preview"
        ) 
        button(type="button" class="btn btn-primary remove-image" style=" margin-top: 10px") Xóa ảnh
      div(class="form-group")
        label(for="role_id") Phân quyền
        select(name="role_id" id="role_id" class="form-control form-select")
          option(disabled) --- Chọn ---
          each item in roles
            option(
              value=item.id
              selected=(item.id == data.role_id ? true : false)
              ) #{item.title}
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(data.status === "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(data.status === "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="from-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật
  else  
    p Vui lòng tạo nhóm quyền trược khi cập nhật tài khoản
    p 
      a(
        href=`/${prefixAdmin}/roles/create`
        class="btn btn-secondary"
      ) Tạo nhóm quyền